{
	"variables":{
		"distro_name":"MapR",
		"distro_version":"4.1.0",
		"distro_sandbox":"C:\\your\\hadoop\\sandbox\\MapR-Sandbox-For-Hadoop-4.1.0.ova",
		"dt_version":"3.0.0",
		"dt_file":"\\your\\dt\\installation\\file.bin"
	},
	"builders":[
		{
			"name":"datatorrent",
			"vm_name":"datatorrent-{{ user `dt_version`}}-{{ user `distro_name`}}-{{ user `distro_version` }}",
			"type":"virtualbox-ovf",
			"source_path":"{{ user `distro_sandbox` }}",
			"ssh_username":"root",
			"ssh_password":"mapr",
			"ssh_wait_timeout":"300s",
			"import_opts":"keepallmacs",
			"shutdown_command":"shutdown -P now",
			"format":"ova",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--natpf1", "\"DTGateway,tcp,127.0.0.1,9090,,9090\""],
				["modifyvm", "{{.Name}}", "--natpf1", "\"DTDashboard,tcp,127.0.0.1,3003,,3003\""]
			]
		}
	],
	"provisioners":[
		{
			"type":"file",
			"source":"{{ user `dt_file` }}",
			"destination":"/tmp/datatorrent.bin"
		},
		{
			"type":"shell",
			"execute_command":"bash '{{.Path}}'",
			"scripts":[
				"script/{{ user `distro_name` }}-install.sh"
			]
		}
	]
}
